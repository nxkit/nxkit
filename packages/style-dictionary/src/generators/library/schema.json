{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "Library",
  "title": "Style Dictionary library generator",
  "description": "Creates a Style Dictionary library",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the library",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?",
      "pattern": "^[a-zA-Z].*$"
    },
    "preset": {
      "description": "The Style Dictionary preset to be used for generating the library.",
      "type": "string",
      "default": "basic",
      "enum": ["basic", "complete"],
      "x-prompt": {
        "message": "Which project preset would you like to use?",
        "type": "list",
        "items": [
          {
            "value": "basic",
            "label": "Basic"
          },
          {
            "value": "complete",
            "label": "Complete"
          }
        ]
      }
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the project is placed",
      "alias": "d"
    },
    "linter": {
      "description": "The tool to use for running lint checks.",
      "type": "string",
      "enum": ["eslint", "none"],
      "default": "eslint"
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["name", "preset"]
}
